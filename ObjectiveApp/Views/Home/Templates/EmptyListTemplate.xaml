<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ObjectiveApp.Views.Home.Templates.EmptyListTemplate">

    <!--View-->
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <VerticalStackLayout
                Spacing="20"
                VerticalOptions="Center">
                <Image
                    Source="lazy.png"
                    HeightRequest="150"
                    HorizontalOptions="Center" />
                <Label
                    Style="{StaticResource LazyLabelStyle}"
                    Text="{TemplateBinding DayOfWeek, StringFormat='Lazy {0}'}"/>
                <Label
                    HorizontalOptions="Center"
                    Text="Your objectives queue is clear at the moment."/>
            </VerticalStackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>

    <!--Styling-->
    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="LazyLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="TextColor" Value="{StaticResource Gray600}"/>
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
    
    
</ContentView>
