<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ObjectiveApp.Views.Home.Templates.CardTemplate">

    <!--View-->
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Border
	            Style="{StaticResource BorderStyle}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="5">
                    <Label 
                        ClassId="PhraseLabel"
                        Text="{TemplateBinding RandomQuote.Phrase}"
                        Style="{StaticResource PhraseLabelStyle}" />
                    <Label 
                        ClassId="QouteeLabel"
                        Text="{TemplateBinding RandomQuote.Qoutee, StringFormat='- {0}'}"
                        Style="{StaticResource QouteeLabelStyle}" />
                </VerticalStackLayout>
            </Border>
        </ControlTemplate>
    </ContentView.ControlTemplate>

    <!--Styling-->
    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="PhraseLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="15" />
                <Setter Property="TextColor" Value="{StaticResource Gray900}"/>
            </Style>

            <Style x:Key="QouteeLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource Gray500}"/>
            </Style>

            <Style x:Key="BorderStyle" TargetType="Border">
                <Setter Property="Padding" Value="15" />
                <Setter Property="StrokeThickness" Value="0" />
                <Setter Property="Background" Value="{StaticResource Gray50}" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

</ContentView>
