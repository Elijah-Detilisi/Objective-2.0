<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    Title="ObjectiveView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ObjectiveApp.Views.Objective.ObjectiveView"
    xmlns:templates="clr-namespace:ObjectiveApp.Views.Objective.Templates">
    <!--Header-->
    <Shell.TitleView>
        <Label
            Text="Create Objective"
            Style="{StaticResource HeaderLabelStyle}"/>
    </Shell.TitleView>

    <!--Body-->
    <VerticalStackLayout
        Spacing="15"
        Padding="12">
        <Label
            Text="New :"
            Style="{StaticResource TitleLabelStyle}"/>

        <templates:FramedEntryTemplate/>
        <templates:DatetimePickerTemplate/>
        <templates:FramedEditorTemplate/>

    </VerticalStackLayout>

    <!--Styling-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="HeaderLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="TextColor" Value="{StaticResource Gray600}"/>
            </Style>

            <Style x:Key="TitleLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="26" />
                <Setter Property="Margin" Value="0,5,0,15" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource Gray600}"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

</ContentPage>