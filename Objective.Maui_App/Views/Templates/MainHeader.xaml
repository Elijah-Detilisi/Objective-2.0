<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Objective.Maui_App.Views.Templates.MainHeader">

    <!--View-->
    <VerticalStackLayout>
        <!--Header Section-->
        <Grid
            ColumnDefinitions="Auto, *, Auto">
            <Frame
                Grid.Column="0"
                Style="{StaticResource FrameLayoutStyle}">
                <ImageButton
                        Source="user.png"
                        Style="{StaticResource ImageButtonStyle}"/>
            </Frame>

            <Label
                Grid.Column="1"
                Text="OBJECTIVE"
                Style="{StaticResource LogoLabelStyle}"/>

            <ImageButton
                Grid.Column="2"
                Margin="10, 10"
                Source="search.png"
                Style="{StaticResource ImageButtonStyle}"/>
        </Grid>
        <!--Greeting Section-->
        <Label
            Text="Good morning objective_user."
            Style="{StaticResource SalutationLabelStyle}"/>

    </VerticalStackLayout>


    <!--Styling-->
    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="FrameLayoutStyle" TargetType="Frame">
                <Setter Property="Margin" Value="10, 10" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="WidthRequest" Value="50" />
                <Setter Property="CornerRadius" Value="60" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="BorderColor" Value="#1560bd" />
            </Style>

            <Style x:Key="ImageButtonStyle" TargetType="ImageButton">
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HeightRequest" Value="49" />
                <Setter Property="WidthRequest" Value="49" />
            </Style>

            <Style x:Key="LogoLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="26" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="#1560bd" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style x:Key="SalutationLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="15" />
                <Setter Property="Margin" Value="0, 5, 0, 30" />
                <Setter Property="FontAttributes" Value="Italic, Bold" />
                <Setter Property="TextColor" Value="#002147" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

        </ResourceDictionary>
    </ContentView.Resources>

</ContentView>
