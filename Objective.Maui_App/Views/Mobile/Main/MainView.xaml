<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    Title="MainView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Objective.Maui_App.Views.Mobile.Main.MainView"
    xmlns:Templates="clr-namespace:Objective.Maui_App.Views.Mobile.Main.Templates"
    xmlns:ViewModels="clr-namespace:Objective.Maui_App.ViewModels">
    
    <VerticalStackLayout
        Spacing="10"
        Padding="10">
        <Templates:Header
            CurrentUser="{Binding CurrentUser}"
            GreetingText="{Binding GreetingText}"/>
        <Templates:Quote
            QuoteText="{Binding RandomQuote}"/>
        <Templates:Objective/>
        
    </VerticalStackLayout>
    
    
</ContentPage>